{
  "name": "file-linter",
  "version": "0.0.3",
  "description": "Regex File Linter",
  "main": "./dist/file-linter",
  "bin": {
    "file-lint": "./dist/file-linter"
  },
  "scripts": {
    "prepare": "npm run dist",
    "build": "tsc",
    "dist": "npm run build && uglifyjs ./build/index.js -o ./dist/file-linter -c -m",
    "dev": "ts-node-dev --respawn --transpileOnly ./src/index.ts",
    "prod": "tsc && node ./build/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Bryce R. McWilliams <https://brycemcwilliams.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.4.2",
    "find-up": "^4.0.0",
    "globby": "^9.2.0",
    "yargs": "^13.2.4"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/find-up": "^2.1.1",
    "@types/globby": "^9.1.0",
    "@types/node": "^12.0.2",
    "@types/yargs": "^13.0.0",
    "ts-node-dev": "^1.0.0-pre.39",
    "typescript": "^3.4.5",
    "uglify-js": "^3.6.0"
  }
}
